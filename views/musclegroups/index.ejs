<h2 class="page-header">Search Musclegroups</h2>
<form action="/musclegroups" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>Difficulty Level</label>
            <select name="difficultyLevel">
                <option value="" <% if (!searchOptions.difficultyLevel) { %>selected <% } %>>Any</option>
    
                <option value="Beginner" <% if (searchOptions.difficultyLevel === 
                'Beginner') { %>selected <% } %>>Beginner</option>
    
                <option value="Intermediate" <% if (searchOptions.difficultyLevel === 
                'Intermediate') { %>selected <% } %>>Intermediate</option>
                
                <option value="Advanced" <% if (searchOptions.difficultyLevel === 
                'Advanced') { %>selected <% } %>>Advanced</option>
            </select>
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>  
    </div>
</form>
<br/>
<div>
    <% musclegroups.forEach(musclegroup => { %>
        <a href="/musclegroups/<%= musclegroup.id %>"> 
            <img height="150" width="100" src="<%= musclegroup.coverImagepath %>">
        </a>
    <% }) %>
</div>