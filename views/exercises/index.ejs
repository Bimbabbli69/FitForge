<h2 class="page-header">Search Exercises</h2>
<form action="/exercises" method="GET">
    <div class="form-row">

    </div>
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br/>
<% exercises.forEach(exercise => { %>
    <div><%= exercise.name %></div>
    <div class="btn-row">
        <a class="btn btn-primary" href="/exercises/<%= exercise.id %>">View</a>
        <a class="btn btn-primary" href="/exercises/<%= exercise.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm', {url: `/exercises/${exercise.id}`}) %>
    </div>
<% }) %>