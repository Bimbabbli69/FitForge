<h2>Search Exercises</h2>
<form action="/exercises" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br/>
<% exercises.forEach(exercise => { %>
    <div><%= exercise.name %></div>
    <a href="/exercises/<%= exercise.id %>">View</a>
    <a href="/exercises/<%= exercise.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', {url: `/exercises/${exercise.id}`}) %>
<% }) %>